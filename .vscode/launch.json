{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "1. Launch (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000/#/?tab=all",
      "webRoot": "${workspaceFolder}/src",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "2. Launch (Firefox)",
      "type": "firefox",
      "request": "launch",
      "reAttach": false,
      "url": "http://localhost:3000/#/?tab=all",
      "webRoot": "${workspaceFolder}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**"
      ],
    },

    // https://vitest.dev/guide/debugging.html#vscode

    {
      "name": "3. Vitest, current test file",
      "type": "node",
      "request": "launch",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
      "args": ["run", "${relativeFile}"],
      "smartStep": true,
      "console": "internalConsole"
    },

    {
      "name": "4. Vitest, all",
      "type": "node",
      "request": "launch",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
      // "args": ["run"],
      // https://vitest.dev/guide/debugging.html#node-inspector-e-g-chrome-devtools
      // "args": ["run", "--inspect-brk", "--single-thread"],
      "args": ["run", "--inspect-brk", "--no-threads"],
      "smartStep": true,
      "console": "internalConsole"
    }

  ]
}